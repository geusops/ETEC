<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EventsApp.Views"
             x:Class="EventsApp.Views.InfoEvent"
             Title="Event Information"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="test1.png">

       <VerticalStackLayout VerticalOptions="CenterAndExpand"
                            Padding="10"
                            Spacing="10"
                            BackgroundColor="Transparent">

              <Frame Padding="10"
                     BackgroundColor="Transparent"
                     BorderColor="Transparent">

                     <VerticalStackLayout>
                            <Label Text="Cálculo da Diária"
                                   FontFamily="SmoochSans"
                                   TextTransform="Uppercase"
                                   FontSize="40"
                                   TextColor="#FF0666B9"
                                   HorizontalTextAlignment="Center">
                                   <!--
                     reference: https://learn.microsoft.com/en-us/dotnet/maui/user-interface/shadow?view=net-maui-8.0
                     -->
                                   <Label.Shadow>
                                          <Shadow Brush="#F8FAFC"
                                                  Offset="5,5"
                                                  Opacity="0.5"/>
                                   </Label.Shadow>
                            </Label>

                            <Frame Padding="10"
                                   Margin="10"
                                   BackgroundColor="#80FFFFFF">
                                   <!--Google search: background color transparency maui
                                   reference: https://stackoverflow.com/questions/71928071/maui-how-to-make-the-background-color-transparent-->
                                   <VerticalStackLayout Spacing="10">

                                          <!--Nome do evento-->
                                          <Label Text="Nome do evento"
                                                 TextTransform="Uppercase"
                                                 FontSize="Subtitle"
                                                 TextColor="{StaticResource Primary}"
                                                 FontFamily="SmoochSans"/>
                                          <Entry Placeholder="Digite o nome do evento"
                                                 PlaceholderColor="Black"
                                                 x:Name="txt_nome_evento"
                                                 FontFamily="SmoochSans"
                                                 TextColor="Black">

                                          </Entry>

                                          <!--Período do evento-->
                                          <Label Text="Período do evento"
                                                 TextTransform="Uppercase"
                                                 FontSize="Subtitle"
                                                 TextColor="{StaticResource Primary}"
                                                 FontFamily="SmoochSans"/>

                                          <Label Text="Data de início: "/>
                                          <DatePicker x:Name="dtpck_inicio"
                                                 DateSelected="dtpck_inicio_DateSelected"
                                                      Format="dd/MM/yyyy"/>

                                          <Label Text="Data de término: "/>
                                          <DatePicker x:Name="dtpck_termino"
                                                      Format="dd/MM/yyyy"/>


                                          <!--Número de participantes-->
                                          <Label Text="Número de participantes"
                                                 TextTransform="Uppercase"
                                                 FontSize="Subtitle"
                                                 TextColor="{StaticResource Primary}"
                                                 FontFamily="SmoochSans">
                                                 <Label.Shadow>
                                                        <Shadow Brush="LightGray"
                                                                Offset="5,5"
                                                                Opacity="0.8"/>
                                                 </Label.Shadow>
                                                 
                                                 </Label>
                                          <Entry Placeholder="Número de participantes"
                                                 PlaceholderColor="Black"
                                                 Keyboard="Numeric"
                                                 x:Name="txt_numero_participantes"
                                                 FontFamily="SmoochSans">

                                          </Entry>
                                          <!--Local do evento-->
                                          <Label Text="Local do evento"
                                                 TextTransform="Uppercase"
                                                 FontSize="Subtitle"
                                                 TextColor="{StaticResource Primary}"
                                                 FontFamily="SmoochSans">
                                                 <Label.Shadow>
                                                        <Shadow Brush="LightGray"
                                                                Offset="5,5"
                                                                Opacity="0.8"/>
                                                 </Label.Shadow>
                                                 
                                                 </Label>
                                          <Entry Placeholder="Digite o local do evento"
                                                 PlaceholderColor="Black"
                                                 Keyboard="Numeric"
                                                 x:Name="txt_local_Evento"
                                                 FontFamily="SmoochSans">

                                          </Entry>

                                          <!--Custo por participante-->
                                          <Label Text="Custo por participante"
                                                 TextTransform="Uppercase"
                                                 FontSize="Subtitle"
                                                 TextColor="{StaticResource Primary}"
                                                 FontFamily="SmoochSans">
                                                 <Label.Shadow>
                                                        <Shadow Brush="LightGray"
                                                                Offset="5,5"
                                                                Opacity="0.8"/>
                                                 </Label.Shadow>
                                          </Label>
                                          <Entry Placeholder="Digite o custo por participante"
                                                 PlaceholderColor="Black"
                                                 Keyboard="Numeric"
                                                 x:Name="txt_custo_participante"
                                                 FontFamily="SmoochSans">

                                          </Entry>
                                   </VerticalStackLayout>
                            </Frame>
                            <Button Text="Avançar"
                                    FontSize="20"
                                    Clicked="Button_Clicked"/>
                     </VerticalStackLayout>
              </Frame>
       </VerticalStackLayout>
</ContentPage>